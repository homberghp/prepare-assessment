#!/bin/bash
mountSticks2.pl
scriptdir=$(dirname $(readlink -f $0))

me=${SUDO_USER}
debug=
source stick_helpers.sh
if [ "root"  != "$USER" ]; then
    echo must be root or in sudo process, sorry.
    exit 1
fi

for i in /media/usb/home-rw-${STYPE}*; do 
    LABEL=$(basename $i)
    ( cleanCasperRW $LABEL ) &
done
wait
sync
for i in /dev/sd{d..x}2; do 
    ( umount $i && \
	(checkHomeRW $i || echo -e "\033[31;1mfs problems with $(dev2Label $i)\033[m" ) ) &
done
wait
sync
# unmount all
umount-sticks
paplay ${scriptdir}/tng-picard-engage.ogg

