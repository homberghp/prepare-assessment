#!/bin/bash
mountSticks2.pl
scriptdir=$(dirname $(readlink -f $0))

me=${SUDO_USER}
debug=
source stick_helpers.sh
if [ "root"  != "$USER" ]; then
    echo must be root or in sudo process, sorry.
    exit 1
fi

for i in /media/usb/home-rw-${STYPE}*; do 
    LABEL=$(basename $i)
    ( cleanCasperRW $LABEL ) &
done
wait
sync
# unmount all
umount-sticks
